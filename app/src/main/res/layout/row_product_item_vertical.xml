<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    android:weightSum="10"
    android:orientation="horizontal">
    <RelativeLayout
        android:gravity="center"
        android:layout_weight="3.5"
        android:layout_width="0dp"
        android:layout_height="140dp">
        <ImageView
            android:padding="16dp"
            android:id="@+id/img_ver_product"
            android:layout_gravity="center"
            android:src="@drawable/img_1603653_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--<TextView-->
            <!--android:id="@+id/txt_ver_state"-->
            <!--android:text="New"-->
            <!--android:textSize="14sp"-->
            <!--android:padding="2dp"-->
            <!--android:textColor="@color/whiteColor"-->
            <!--android:background="@drawable/layout_status_product"-->
            <!--android:layout_alignLeft="@+id/img_ver_product"-->
            <!--android:layout_alignTop="@+id/img_ver_product"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="6.5"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_ver_productName"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="Bo mạch chính/ Mainboard Asrock H110M-DVS R2.0"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_ver_productPrice"
                android:text="1.320"
                android:textColor="#d42333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=".000 ₫"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#d42333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_ver_discount"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_ver_productBasicPrice"
                android:text="1.320"
                android:textColor="#9fa0a2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/horizontal_dashed_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=".000 ₫"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#9fa0a2"
                android:background="@drawable/horizontal_dashed_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="-"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#d42333"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_ver_discount"
                android:text="5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#d42333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="%"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#d42333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>