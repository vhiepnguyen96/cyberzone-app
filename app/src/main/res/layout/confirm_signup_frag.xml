<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_custom">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="XÁC NHẬN THÔNG TIN"
                android:textColor="@color/whiteColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lnr_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="16dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/background_edittext_opacity"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/account_white_24px" />

                            <EditText
                                android:id="@+id/edt_name"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="9"
                                android:background="@null"
                                android:hint="Họ và tên"
                                android:inputType="textPersonName"
                                android:textColor="@color/whiteColor"
                                android:textColorHint="@color/textHintColor"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/background_edittext_opacity"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/gender_white_24px" />

                            <TextView
                                android:id="@+id/tv_gender"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="4"
                                android:text="Giới tính"
                                android:textColor="@color/textHintColor" />

                            <RadioGroup
                                android:id="@+id/rbg_gender"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rbn_boy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:buttonTint="@color/whiteColor"
                                    android:text="Nam"
                                    android:textColor="@color/whiteColor" />

                                <RadioButton
                                    android:id="@+id/rbn_girl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:buttonTint="@color/whiteColor"
                                    android:text="Nữ"
                                    android:textColor="@color/whiteColor" />
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/background_edittext_opacity"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/calendar_white_24px" />

                            <TextView
                                android:id="@+id/tv_birthday"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="8"
                                android:hint="Ngày sinh"
                                android:textColor="@color/whiteColor"
                                android:textColorHint="@color/textHintColor"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/img_date_picker"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/date_picker" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/background_edittext_opacity"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/mail_white_24px" />

                            <EditText
                                android:id="@+id/edt_email"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="9"
                                android:background="@null"
                                android:hint="Email"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/whiteColor"
                                android:textColorHint="@color/textHintColor"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/background_edittext_opacity"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/phone_white_24px" />

                            <EditText
                                android:id="@+id/edt_phone"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="9"
                                android:background="@null"
                                android:hint="Số điện thoại"
                                android:inputType="phone"
                                android:textColor="@color/whiteColor"
                                android:textColorHint="@color/textHintColor"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="24dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_update"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_radius_gray"
                                android:padding="12dp"
                                android:text="CẬP NHẬT"
                                android:textColor="@color/colorText" />

                            <TextView
                                android:id="@+id/tv_update_later"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/border_bottom_no_padding"
                                android:text="Cập nhật sau"
                                android:textAlignment="center"
                                android:textColor="@color/whiteColor" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

