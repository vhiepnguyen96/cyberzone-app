<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_product_horizontal"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:background="@drawable/rounded_border"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_hor_product"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/img_1603653_1" />

    <TextView
        android:id="@+id/txt_hor_productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bo mạch chính/ Mainboard Asrock H110M-DVS R2.0"
        android:textColor="#333"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/txt_hor_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.320"
            android:textColor="#d42333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".000 ₫"
            android:textColor="#d42333"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_hor_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/txt_hor_productBasicPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/horizontal_dashed_line"
            android:text="1.320"
            android:textColor="#9fa0a2"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/horizontal_dashed_line"
            android:text=".000 ₫"
            android:textColor="#9fa0a2"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="-"
            android:textColor="#d42333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_hor_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#d42333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="#d42333"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>